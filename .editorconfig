# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 4

# newlines in this file can cause problems with templating
[home/.chezmoitemplates/path]
insert_final_newline = false
