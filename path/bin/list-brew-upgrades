#!/usr/bin/env bash

# Script used to list all updates for manually installed items

# Exit on error. Append || true if you expect an error.
set -o errexit
# Exit on error inside any functions or subshells.
set -o errtrace
# Do not allow use of undefined vars. Use ${VAR:-} to use an undefined VAR
set -o nounset
# Catch the error in case mysqldump fails (but gzip succeeds) in `mysqldump |gzip`
set -o pipefail
# Turn on traces, useful while debugging but commented out by default
#set -o xtrace

echo Updating Homebrew
brew update

echo Formulae
for f in $(brew outdated --json | jq -r '.formulae[]  | select(.pinned == false) | .name'); do
  test "$(brew info --formulae --json=v2 "$f" | jq '.formulae[].installed[].installed_on_request')" = "true" && echo "$f"
done

echo Casks
brew outdated --json | jq -r '.casks[].name'
