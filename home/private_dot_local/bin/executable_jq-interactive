#!/usr/bin/env bash

# Script to use fzf to show an interactive version of jq so that the query can be played with

# Exit on error. Append || true if you expect an error.
set -o errexit
# Exit on error inside any functions or subshells.
set -o errtrace
# Do not allow use of undefined vars. Use ${VAR:-} to use an undefined VAR
set -o nounset
# Catch the error in case mysqldump fails (but gzip succeeds) in `mysqldump |gzip`
set -o pipefail
# Turn on traces, useful while debugging but commented out by default
#set -o xtrace

if [[ -z "${1:-}" ]] || [[ "$1" == "-" ]]; then
  input=$(mktemp)
  trap 'rm -f "$input"' EXIT
  cat /dev/stdin > "$input"
else
  input=$1
fi

echo '' | fzf --disabled --print-query --preview-window='up:95%' --preview "jq --color-output --raw-output {q} $input"
