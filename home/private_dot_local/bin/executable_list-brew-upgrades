#!/usr/bin/env bash

# Script used to list all updates for manually installed items

# Exit on error. Append || true if you expect an error.
set -o errexit
# Exit on error inside any functions or subshells.
set -o errtrace
# Do not allow use of undefined vars. Use ${VAR:-} to use an undefined VAR
set -o nounset
# Catch the error in case mysqldump fails (but gzip succeeds) in `mysqldump |gzip`
set -o pipefail
# Turn on traces, useful while debugging but commented out by default
#set -o xtrace

echo Updating Homebrew
brew update

echo Formulae
brew outdated --json | jq --compact-output '.formulae[]  | select(.pinned == false) | {name, current_version, installed_versions}' | while IFS= read -r line; do
  info="$(brew info --formulae --json=v2 "$(echo "$line" | jq --raw-output '.name')")"
  if [[ "$(echo "$info" | jq '.formulae[].installed[].installed_on_request')" == "true" ]]; then
    url="$(echo "$info" | jq --raw-output '.formulae[].urls.stable.url')"
    releaseUrl=""
    if [[ "$url" =~ ^https://github.com/([^/]*)/([^/]*)/archive/refs/tags/(.*?).tar.gz$ ]]; then
      releaseUrl=" - https://github.com/${BASH_REMATCH[1]}/${BASH_REMATCH[2]}/releases/tag/${BASH_REMATCH[3]}"
    elif [[ "$url" =~ ^https://github.com/([^/]*)/([^/]*).git$ ]]; then
      releaseUrl=" - https://github.com/${BASH_REMATCH[1]}/${BASH_REMATCH[2]}/releases/tag/$(echo "$info" | jq --raw-output '.formulae[].urls.stable.tag')"
    fi
    printf '%s%s\n' "$(echo "$line" | jq --raw-output '"\(.name) \(.installed_versions[0]) -> \(.current_version)"')" "$releaseUrl"
  fi
done

echo Casks
brew outdated --json | jq --raw-output '.casks[] | "\(.name) \(.installed_versions[0]) -> \(.current_version)"'

echo Pinned formulas
brew list --pinned
